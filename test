---
- name: Create a Windows user with admin rights
  hosts: windows_server
  tasks:
    - name: Create Windows user
      win_user:
        name: "new_user_name"
        password: "password_here"
        groups: "Administrators"
        state: present
      register: user_result

    - name: Add user to Administrators group
      win_group_membership:
        name: Administrators
        members: "new_user_name"
        state: present
      when: user_result.changed

